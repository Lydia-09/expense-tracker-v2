<h1 class="mb-1 restaurant-show-title">修改支出</h1>
<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">
      <p><small class="text-secondary">( <span class="text-danger">*</span> 號欄位為必填)</small></p>
      <form action="/records/{{ record._id }}?_method=PUT" method="POST">
        <div class="form-row">
          <div class="form-group">
            <i class="fas fa-store"></i>
            <label for="name">名稱<span class="text-danger">*</span></label>
            <input type="text" class="form-control" name="name" id="name" placeholder="ex: 早餐"
              value="{{ record.name }}" required>
          </div>
        </div>
        <div class="form-row">
          <div class="form-group">
            <i class="fas fa-phone-alt"></i>
            <label for="date">日期<span class="text-danger">*</span></label>
            <input type="date" class="form-control" name="date" placeholder="date"
              value="{{ record.date }}" required>
          </div>
        </div>
        <div class="form-row">
          <div class="form-group">
            <i class="fas fa-cookie"></i>
            <label for="categoryId">類別<span class="text-danger">*</span></label>
            <select class="form-control" id="categoryId" name="categoryId" required>
              {{#each categoryData}}
              <option value="{{this._id}}">{{this.name}}</option>
              {{/each}}
            </select>
          </div>
        </div>
        <div class="form-row">
          <div class="form-group">
            <label for="amount">金額<span class="text-danger">*</span></label>
            <input type="text" class="form-control" name="amount" id="amount" inputmode="numeric" placeholder="ex: 100"
              value="{{ record.amount }}" required>
          </div>
        </div>
        <div class="d-flex justify-content-center mb-3">
          <button class="btn btn-outline-secondary btn-sm mr-3 btn-crud" type="submit">
            <i class="fas fa-save"></i>儲存
          </button>
          <a href="/">
            <button type="button" class="btn btn-outline-secondary btn-sm btn-crud">
              <i class="fas fa-times"></i>取消
            </button>
          </a>
        </div>
      </form>
    </div>
  </div>
</div>