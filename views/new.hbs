<h1 class="mb-1 restaurant-show-title">新增支出</h1>
<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">
      <p><small class="text-secondary">( <span class="text-danger">*</span> 號欄位為必填)</small></p>
      <form action="/records" method="POST">
        <div class="form-row">
          <div class="form-group">
            <i class="fas fa-store"></i>
            <label for="name">名稱<span class="text-danger">*</span></label>
            <input type="text" class="form-control" name="name" id="name" placeholder="ex: 早餐" minlength="2"
              maxlength="25" required>
          </div>
        </div>
        <div class="form-row">
          <div class="form-group">
            <i class="fas fa-phone-alt"></i>
            <label for="phone">日期<span class="text-danger">*</span></label>
            <input type="date" class="form-control" name="date" placeholder="date" required>
          </div>
        </div>
        <div class="form-row">
          <div class="form-group">
            <i class="fas fa-cookie"></i>
            <label for="category">類別<span class="text-danger">*</span></label>
            <div class="col-sm-10">
              <select class="form-select" aria-label=".form-select" name="category" id="category" required>
                <option selected disabled>請選擇類別</option>
                {{#each category}}
                <option value={{this.name}}>{{this.name}}</option>
                {{/each}}
              </select>
            </div>
          </div>
        </div>
        <div class="form-row">
          <div class="form-group">
            <label for="amount">金額<span class="text-danger">*</span></label>
            <input type="text" class="form-control" name="amount" id="amount" inputmode="numeric" placeholder="ex: 100"
              min="1" max="100000000" required>
          </div>
        </div>
        <div class="d-flex justify-content-center mb-3">
          <button class="btn btn-outline-secondary btn-sm mr-3 btn-crud" type="submit">
            <i class="fas fa-save"></i>儲存
          </button>
          <a href="/">
            <button type="button" class="btn btn-outline-secondary btn-sm btn-crud">
              <i class="fas fa-times"></i>取消
            </button>
          </a>
        </div>
      </form>
    </div>
  </div>
</div>